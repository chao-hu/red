<div class="col-md-12">
  <div class="form-group" ng-class="{ 'has-error' : appForm.labels.$invalid && (appForm.labels.$dirty || submitted)}">
    <table class="table table-bordered">
      <thead>
        <td>Key</td>
        <td>Value</td>
        <td></td>
      </thead>
      <tbody>
        <tr  ng-repeat="(k, v) in app.labels">
          <td> <input type="input" class="form-control" name="labels" ng-model="k" ng-required=true> </td>
          <td> <input type="input" class="form-control" name="labels" ng-model="v" ng-required=true> </td>
          <td><a class="btn btn-danger btn-sm" ng-click="removeLabel(k)"><%= fa_icon(:minus)%> </a></td>
        </tr>
        <tr>
          <td colspan=5><a class="btn btn-primary btn-sm" ng-click="moreLabels()"><%= fa_icon(:plus)%> New Label </a></td>
        </tr>
      </tbody>
    </table>
    <p ng-show="appForm.labels.$invalid && (appForm.labels.$dirty || submitted)" class="help-block">You name is required.</p>
  </div>
</div>
