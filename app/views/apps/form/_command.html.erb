<div class="col-md-12">
  <div class="form-group" ng-class="{ 'has-error' : appForm.cpu.$invalid && (appForm.cpu.$dirty || submitted)}" >
    <label for="cpu" class="col-sm-2 control-label"><%= t("app.cpu") %></label>
    <div class="col-sm-10">
      <input type="input" name="cpu" class="form-control" id="cpu" ng-model="app.cpu" ng-required="true">
      <p ng-show="appForm.cpu.$invalid && (appForm.cpu.$dirty || submitted)" class="help-block">You name is required.</p>
    </div>
  </div>

  <div class="form-group" ng-class="{ 'has-error' : appForm.mem.$invalid && (appForm.mem.$dirty || submitted)}" >
    <label for="mem" class="col-sm-2 control-label"><%= t("app.mem") %></label>
    <div class="col-sm-10">
      <input type="input" name="mem" class="form-control" id="mem" ng-model="app.mem" ng-required="true">
      <p ng-show="appForm.mem.$invalid && (appForm.mem.$dirty || submitted)" class="help-block">You name is required.</p>
    </div>
  </div>

  <div class="form-group" ng-class="{ 'has-error' : appForm.cmd.$invalid && (appForm.cmd.$dirty || submitted)}" >
    <label for="cmd" class="col-sm-2 control-label"><%= t("app.cmd") %></label>
    <div class="col-sm-10">
      <input type="input" name="cmd" class="form-control" id="cmd" ng-model="app.cmd" ng-required="true">
      <p ng-show="appForm.cmd.$invalid && (appForm.cmd.$dirty || submitted)" class="help-block">You name is required.</p>
    </div>
  </div>

  <div class="form-group" ng-class="{ 'has-error' : appForm.env.$invalid && (appForm.env.$dirty || submitted)}">
    <label for="env" class="col-sm-2 control-label"><%= t("app.env") %></label>
    <div class="col-sm-10">
      <table class="table table-bordered">
        <thead>
          <td>Key</td>
          <td>Value</td>
          <td></td>
        </thead>
        <tbody>
          <tr  ng-repeat="(k, v) in app.env">
            <td> <input type="input" class="form-control" name="env" ng-model="k" ng-required=true> </td>
            <td> <input type="input" class="form-control" name="env" ng-model="v" ng-required=true> </td>
            <td><a class="btn btn-danger btn-sm" ng-click="removeEnv(k)"><%= fa_icon(:minus)%> </a></td>
          </tr>
          <tr>
            <td colspan=5><a class="btn btn-primary btn-sm" ng-click="moreEnv()"><%= fa_icon(:plus)%> New ENV </a></td>
          </tr>
        </tbody>
      </table>
    </div>
    <p ng-show="appForm.env.$invalid && (appForm.env.$dirty || submitted)" class="help-block">You name is required.</p>
  </div>
</div>
