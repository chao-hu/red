<div class="form-group" ng-class="{ 'has-error' : appForm.cmd.$invalid && (appForm.cmd.$dirty || submitted)}" >
  <label for="cmd" class="col-sm-2 control-label"><%= t("app.cmd") %></label>
  <div class="col-sm-10">
    <input type="input" name="cmd" class="form-control" id="cmd" ng-model="app.cmd">
    <p ng-show="appForm.cmd.$invalid && (appForm.cmd.$dirty || submitted)" class="help-block">You name is required.</p>
  </div>
</div>

<div class="form-group" ng-class="{ 'has-error' : appForm.privileged.$invalid && (appForm.privileged.$dirty || submitted)}" >
  <label for="cmd" class="col-sm-2 control-label"><%= t("app.privileged") %></label>
  <div class="col-sm-10">
    <input type="checkbox" ng-model="app.privileged" id='privileged'>
    <p ng-show="appForm.cmd.$invalid && (appForm.cmd.$dirty || submitted)" class="help-block">You name is required.</p>
  </div>
</div>

<div class="form-group" ng-class="{ 'has-error' : appForm.env.$invalid && (appForm.env.$dirty || submitted)}">
  <label for="env" class="col-sm-2 control-label"><%= t("app.env") %></label>
  <div class="col-sm-10">
    <table class="table table-bordered">
      <tr>
        <th><%= t('common.key') %></td>
        <th><%= t('common.value') %></td>
        <th></td>
      </tr>
      <tbody>
        <tr  ng-repeat="envPair in app.env">
          <td> <input type="input" class="form-control" name="env" ng-model="envPair.key" ng-required=true> </td>
          <td> <input type="input" class="form-control" name="env" ng-model="envPair.value" ng-required=true> </td>
          <td><a class="btn btn-default btn-sm" ng-click="removeEnv($index)"><%= fa_icon(:minus)%> </a></td>
        </tr>
        <tr>
          <td colspan=5><a class="btn btn-default btn-sm" ng-click="moreEnv()"><%= fa_icon(:plus)%> <%= t('app.new_env') %> </a></td>
        </tr>
      </tbody>
    </table>
  </div>
  <p ng-show="appForm.env.$invalid && (appForm.env.$dirty || submitted)" class="help-block">You name is required.</p>
</div>

