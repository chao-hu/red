!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Dataman Red"

    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"
    = yield :custom_assets

  %body{class: controller_name}
    .turbolinks-progress-bar.text-center
      %p
        %i.fa.fa-cog.fa-spin.fa-4x.fa-fw
    .navbar-inverse.navbar-default.navbar-static-top
      .container-fluid
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="/")
          = image_tag "logo-shurenyun-ico2.svg"
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav.navbar-right
            %li{class: navbar_nav_active_class(:services) }= link_to fa_icon(:bars) + " " + t('nav.services'), services_path
            %li{class: navbar_nav_active_class(:service_templates) }= link_to t('nav.service_templates'), service_templates_path
            %li{class: navbar_nav_active_class(:registries) }= link_to t('nav.registries'), registries_path
            %li{class: navbar_nav_active_class(:nodes) }= link_to t('nav.host'), nodes_path
            %li{class: navbar_nav_active_class(:rbac) }= link_to t('nav.rbac'), rbac_path
            %li{class: navbar_nav_active_class(:system) }= link_to t('nav.system'), system_path
            = drop_down fa_icon(:user) + " #{current_user.display}" do
              = menu_item t('nav.setting'), setting_path
              = menu_item t('nav.logout'), logout_path, method: :delete
              = drop_down_divider
              = menu_item fa_icon(:language) + " " + desired_language, toggle_locale_path, remote: true, method: :put

    .container-fluid.main
      .row
        .col-lg-12
          = bootstrap_flash
          -#= render :partial => "widgets/breadcrumb"
          = panel_item(t("nav.#{page_request_meta_info[:panel_header_and_icon][:text]}"),
            page_request_meta_info[:panel_header_and_icon][:icon]) do
            - if controller.class.ancestors.include? NodesController
              .row
                .col-md-4.col-lg-2
                  = render :partial => "nodes/node_left", locals: {nodes: @nodes}
                .col-md-8.col-lg-10#node_details
                  = yield
            - elsif controller.class.ancestors.include? SystemController
              .row
                .col-md-4.col-lg-2
                  = render :partial => "system/system_left"
                .col-md-8.col-lg-10#system_details
                  = yield
            - else
              = yield
      %footer
        %p &copy; Company 2017
