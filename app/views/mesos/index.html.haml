= box_helper "success" do
  = box_header_helper t("system.mesos_slaves"), "server" do
    .box-tools.pull-right
      = button_tag class: 'btn btn-box-tool', data: { widget: 'collapse' } do
        = fa_icon(:plus)

  = box_body_helper do
    %table.table.table-stripped
      %thead
        %td ID
        %td 主机名
        %td 健康
        %td 资源
        %td 已用
        %td 已分
        %td PID
        %td 属性
        %td 能力
      %tbody
        - @state["slaves"].each do |f|
          %tr
            %td= f["id"]
            %td= f["hostname"]
            %td= f["active"]
            %td= f["resources"]
            %td= f["used_resources"]
            %td= f["offered_resources"]
            %td= f["pid"]
            %td= f["attributes"]
            %td= f["capbilities"]
