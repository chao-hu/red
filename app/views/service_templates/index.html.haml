- @service_templates.each do |temp|
  .template_holder.col-md-3.col-lg-2.text-center
    %a.template_holder{href: edit_service_template_path(temp)}
      .thumbnail
        = image_tag(temp.icon.try(:small).try(:url) || "placeholder.png", class: "card-image-top")
        .caption
          %h4= temp.name
          %p= temp.desc
          %small.text-muted
            = l(temp.updated_at)

        .service_template_action
          = link_to "发布服务", new_service_path(service_template_id: temp.id), class: 'btn btn-primary btn-lg'


.clearfix
= paginate @service_templates
