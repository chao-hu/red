- @service_templates.each do |temp|
  %a.col-md-3.col-lg-2.text-center{href: edit_service_template_path(temp)}
    .thumbnail
      = image_tag(temp.icon.try(:small).try(:url) || "placeholder.png", class: "card-image-top")
      .caption
        %h4= temp.name
        %p= temp.desc
        %small.text-muted
          = l(temp.updated_at)

.clearfix
= paginate @service_templates
