= simple_form_for(group, multiple: true, class: "form-horizontal") do |f|
  = f.button :submit, t("common.update_group"), class: 'btn btn-default btn-primary pull-right', data: { confirm: t("common.confirm") }
  .clearfix
  = panel_item t("common.detail_info"), :info do
    = image_tag group.icon.small.try(:url) || "placeholder.png"
    %label.btn.btn-default.btn-file
      = f.input :icon, input_html: { style: "display: none;" }, label: fa_icon(:plus) + " " + t('common.upload_icon')

    %hr
    = f.input :name, label: t("group.name")
    = f.input :desc, as: :text, label: t("group.desc")
