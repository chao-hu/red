= link_to fa_icon(:plus) + " " + t("common.new_group"), new_group_path, class: 'btn btn-primary btn-flat btn-block margin-bottom'
= box_helper "success" do
  = box_header_helper t("group.all_groups"), ""

  = box_body_helper do
    %ul.nav.nav-pills.nav-stacked
      - groups.each do |group|
        %li{class: group == @group ? 'active' : ''}
          %a{href: group.is_default? ? groups_path : group_path(group), class: group.id == @group.id ? 'active' : '' }
            = image_tag group.icon.thumb.try(:url) || "placeholder.png", height: 30
            = group.name
            %small.label.label-primary.pull-right= group.users.count
