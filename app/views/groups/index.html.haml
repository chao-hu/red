.row
  .col-md-12.text-right
    = link_to fa_icon(:plus) + " " + t("common.new_group"), new_group_path, class: 'btn btn-primary'
    = link_to fa_icon(:plus) + " " + t("group.new_group_user"), "#newUser", class: 'btn btn-primary', data: { toggle: 'modal' }

  = modal_dialog id: "newUser", header: { show_close: true, dismiss: 'modal', title: t('user.new_user') }, body:   { content: render(:partial => "users/form", locals: { group: @group, user: @group.users.new, siteadmin_require: true, groupadmin_require: false }) }, footer: { content: '' }



.row
  .col-md-4.col-lg-2
    = render :partial => "group_left", locals: { groups: @groups }

  .col-md-8.col-lg-10#group_detail
    = render :partial => "groups/details/detail", locals: { group: @groups.first }
    = render :partial => "groups/details/quota", locals: { group: @groups.first }
    = render :partial => "groups/details/users_for_default_group", locals: { group: @groups.first }
