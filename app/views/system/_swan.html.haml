= box_helper "success" do
  = simple_form_for Site.default, url: update_swan_config_path, remote: true do |form|
    = box_header_helper t("system.swan_config"), :cog do
      .box-tools.pull-right
        = form.submit t("common.update_btn"), class: danger_btn_helper

    = box_body_helper do
      = form.input :swan_addrs, label: t("system.swan_addrs")
